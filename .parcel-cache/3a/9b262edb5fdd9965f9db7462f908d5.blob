/* Content */

.content {
  padding: 8px 90px;
  font-family: 'Roboto', sans-serif;
}

.content p {
  line-height: 1.9;
}

.content img {
  max-height: 500px;
}

/* Share Buttons */

.share-buttons {
  display: flex;
}

.share-buttons > div {
  background-color: #000;
  padding: 32px;
  margin-right: 12px;
  border-radius: 50%;
  color: white;
}

.share-buttons a i {
  font-size: 24px;
}

.share-buttons a {
  margin: 12px 0;
  transition: 500ms;
}

.share-buttons a:hover {
  transform: scale(1.2);
}

/* Media Queries */

@media (max-width: 550px) {
  .content {
    padding: 8px 32px;
  }

  .share-btn-container {
    transform: unset;
    top: unset;
    left: 0;
    bottom: 0;
    width: 100%;
    flex-direction: row;
    box-shadow: 4px 0 8px rgba(0, 0, 0, 0.3);
    padding: 16px 0;
    justify-content: center;
  }

  .share-btn-container a {
    margin: 0 32px;
  }
}
